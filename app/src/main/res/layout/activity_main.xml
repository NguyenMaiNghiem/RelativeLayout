<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:background="#1185B3"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txtView2"
        android:layout_centerInParent="true"
        android:layout_above="@id/txtView1"
        android:layout_alignLeft="@id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:background="#1ABD07"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/txtView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@id/txtView1"
        android:text="Orange"
        android:textSize="30sp"
        android:background="#FB6602"
        android:layout_below="@id/txtView1"/>
    <TextView
        android:id="@+id/txtView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/txtView1"
        android:textSize="30sp"
        android:background="#FF0303"
        android:layout_above="@id/txtView2"/>
    <TextView
        android:id="@+id/txtView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@id/txtView1"
        android:background="#775C5C"
        android:layout_below="@id/txtView3"/>
    <TextView
        android:id="@+id/txtView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:textSize="30sp"
        android:layout_alignLeft="@id/txtView1"
        android:layout_centerInParent="true"
        android:background="#E408E0"
        android:layout_below="@id/txtView5"/>


</RelativeLayout>