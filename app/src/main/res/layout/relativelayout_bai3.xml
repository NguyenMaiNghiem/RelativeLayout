<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top content here"
        android:textSize="30sp"
        android:background="#F61E1E"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botton content here"
        android:textSize="30sp"
        android:background="#0999F8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:background="#54F818"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        android:textSize="30sp"
        android:layout_marginRight="30dp"
        android:background="#F6D31E"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/txtSecond"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three"
        android:textSize="30sp"
        android:background="#F65702"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/txtSecond"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>