<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="1"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#F40B0B"/>
    <TextView
        android:id="@+id/txtView2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView1"
        android:layout_toRightOf="@+id/txtView1"
        android:text="2"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#059806"/>
    <TextView
        android:id="@+id/txtView3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView2"
        android:layout_toRightOf="@+id/txtView2"
        android:text="3"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#58EF07"/>
    <TextView
        android:id="@+id/txtView4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView3"
        android:layout_toRightOf="@+id/txtView3"
        android:text="4"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#7B07EF"/>
    <TextView
        android:id="@+id/txtView5"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView4"
        android:layout_toLeftOf="@+id/txtView4"
        android:text="5"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#EF07E3"/>
    <TextView
        android:id="@+id/txtView6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView5"
        android:layout_toLeftOf="@+id/txtView5"
        android:text="6"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#EFE307"/>
    <TextView
        android:id="@+id/txtView7"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtView6"
        android:layout_toLeftOf="@+id/txtView6"
        android:text="7"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#07DCEF"/>



</RelativeLayout>